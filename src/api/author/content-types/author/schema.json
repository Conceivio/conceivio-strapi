{
  "kind": "collectionType",
  "collectionName": "authors",
  "info": {
    "singularName": "author",
    "pluralName": "authors",
    "displayName": "Author",
    "description": "Create authors for your content"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "avatar": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ]
    },
    "email": {
      "type": "string"
    },
    "twitter_handle": {
      "type": "string"
    },
    "isprimary": {
      "type": "boolean",
      "default": true
    },
    "full_name": {
      "type": "string"
    },
    "languages": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::language.language",
      "inversedBy": "authors"
    },
    "bio": {
      "type": "text"
    },
    "appointment_type": {
      "type": "enumeration",
      "enum": [
        "in_person",
        "virtual",
        "both"
      ]
    }
  }
}
